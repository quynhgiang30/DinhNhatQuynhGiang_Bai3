@model IEnumerable<DinhNhatQuynhGiang_Bai3.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">Products</h2>
        <a asp-action="Add" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add Product
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var product in Model)
                            {
                                        <tr>
                                            <td>
                                                <span class="fw-medium">@product.Name</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary bg-opacity-10 text-primary px-2 py-1">
                                                    $@string.Format("{0:0.00}", product.Price)
                                                </span>
                                            </td>
                                            <td>@product.Description</td>
                                            <td>
                                        @if (product.Category != null)
                                        {
                                                        <span class="badge bg-secondary bg-opacity-10 text-secondary px-2 py-1">
                                                @product.Category.Name
                                                        </span>
                                        }
                                        else
                                        {
                                                        <span class="text-muted small">No category</span>
                                        }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i> View
                                                    </a>
                                                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fas fa-edit me-1"></i> Edit
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger" 
                                                       onclick="return confirm('Are you sure you want to delete this product?');">
                                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                            }
                        }
                        else
                        {
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <div class="text-muted">
                                            <i class="fas fa-info-circle me-2"></i> No products found. Create a new product to get started.
                                        </div>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

