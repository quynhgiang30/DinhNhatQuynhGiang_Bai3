@model IEnumerable<DinhNhatQuynhGiang_Bai3.Models.Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">Categories</h2>
        <a asp-action="Add" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Create New
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-8">Name</th>
                            <th class="col-md-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var category in Model)
                            {
                                        <tr>
                                            <td>
                                                <span class="fw-medium">@category.Name</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fas fa-edit me-1"></i> Edit
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger" 
                                                       onclick="return confirm('Are you sure you want to delete this category? This may affect products using this category.');">
                                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                            }
                        }
                        else
                        {
                                <tr>
                                    <td colspan="2" class="text-center py-4">
                                        <div class="text-muted">
                                            <i class="fas fa-info-circle me-2"></i> No categories found. Create a new category to get started.
                                        </div>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>